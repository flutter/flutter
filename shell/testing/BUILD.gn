executable("testing") {
  testonly = true

  output_name = "flutter_tester"

  public_configs = [ "$flutter_root:config" ]

  sources = [
    "tester_main.cc",
  ]

  deps = [
    "$flutter_root/assets",
    "$flutter_root/common",
    "$flutter_root/fml",
    "$flutter_root/shell/common",
    "//garnet/public/lib/fxl",
    "//third_party/dart/runtime:libdart_jit",
    "//third_party/dart/runtime/bin:embedded_dart_io",
    "//third_party/skia",
    "//topaz/lib/tonic",
  ]

  if (is_linux) {
    ldflags = [ "-rdynamic" ]
  }
}
